
# ---------- Stage 1: Build ----------
FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o gotasker ./cmd/server/main.go

# ---------- Stage 2: Runtime ----------
FROM alpine:3.20

WORKDIR /app
COPY --from=builder /app/gotasker .
COPY .env .

EXPOSE 4000
CMD ["./gotasker"]

